<Window x:Class="AudioWallpaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioWallpaper" KeyDown="Window_KeyDown" MouseWheel="Window_MouseWheel"
        mc:Ignorable="d" WindowStyle="None" Background="Black" SizeChanged="Window_SizeChanged" Closing="Window_Closing"
        xmlns:DXExtensions="clr-namespace:TqkLibrary.Wpf.Interop.DirectX;assembly=TqkLibrary.Wpf.Interop.DirectX"
        Title="MainWindow" Height="450" Width="1000" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded">
    <Grid x:Name="Visu">
        
        <Canvas x:Name="Visualizer" Margin="64">
            <Image x:Name="D3DImgHost">
                <Image.Source>
                    <DXExtensions:D3D11Image x:Name="D3DImg"/>
                </Image.Source>
            </Image>
        </Canvas>
    </Grid>
</Window>
